ErrorDocument 400 /.error.php
ErrorDocument 401 /.error.php
ErrorDocument 403 /.error.php
ErrorDocument 404 /.error.php
ErrorDocument 405 /.error.php
ErrorDocument 408 /.error.php
ErrorDocument 414 /.error.php
ErrorDocument 500 /.error.php
ErrorDocument 502 /.error.php
ErrorDocument 504 /.error.php

DirectoryIndex index.htm index.html index.shtml index.php default.php .index.php

AuthType Basic
AuthName "Protected Area"
AuthUserFile /var/www/.htpasswd
<RequireAny>
# To disable password authentification comment the line below
    Require valid-user
# To disable IP authentification comment the line below
    Require ip 127.0.0.1
# You can allow multiple ips by adding a new line like this :
#    Require ip xxx.xxx.xxx.xxx
</RequireAny>
